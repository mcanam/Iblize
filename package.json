{
    "name": "iblize",
    "version": "2.0.1",
    "description": "Simple Javascript Code Editor Library",
    "main": "dist/iblize.js",
    "scripts": {
        "themes:build": "sass themes:dist/themes --style=compressed",
        "themes:watch": "sass themes:dist/themes --watch --no-source-map",
        "lib:build": "mode=prod rollup -c",
        "lib:watch": "rollup -c -w",
        "build": "npm run themes:build & npm run lib:build"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mcanam/iblize.git"
    },
    "keywords": [
        "code-editor"
    ],
    "author": "mcanam",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mcanam/iblize/issues"
    },
    "homepage": "https://github.com/mcanam/iblize#readme",
    "dependencies": {
        "prismjs": "^1.24.0"
    },
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/preset-env": "^7.14.7",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "rollup": "^2.52.6",
        "rollup-plugin-styles": "^3.14.1",
        "rollup-plugin-terser": "^7.0.2",
        "sass": "^1.35.2"
    },
    "browserslist": [
        "defaults",
        "not IE 11",
        "not op_mini all"
    ]
}

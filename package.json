{
    "name": "iblize",
    "version": "1.0.0-alpha",
    "description": "simple javascript code editor library",
    "main": "dist/iblize.js",
    "scripts": {
        "start-dev": "live-server --open=dev",
        "build-themes": "sass src/themes/index.scss:dist/iblize.css --style=compressed --no-source-map",
        "watch-themes": "sass src/themes/index.scss:dist/iblize.css --watch --no-source-map",
        "build-lib": "rollup -c",
        "build": "npm run build-themes & npm run build-lib"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mcanam/iblize.git"
    },
    "keywords": ["code editor"],
    "author": "mcanam",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mcanam/iblize/issues"
    },
    "homepage": "https://github.com/mcanam/iblize#readme",
    "dependencies": {
        "prismjs": "^1.24.0"
    },
    "devDependencies": {
        "@babel/core": "^7.14.6",
        "@babel/preset-env": "^7.14.7",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^19.0.0",
        "@rollup/plugin-inject": "^4.0.2",
        "@rollup/plugin-node-resolve": "^13.0.0",
        "live-server": "^1.2.1",
        "node-sass": "^6.0.1",
        "rollup": "^2.52.6",
        "rollup-plugin-terser": "^7.0.2"
    },
    "browserslist": [
        "defaults",
        "not IE 11",
        "not op_mini all"
    ]
}
